		    	    	    android:button="@null"
		    	    	    android:gravity="center"
		    	    	    android:layout_marginLeft="6dp"
		    	    	    android:background="@drawable/score_delete"
	    	    	    />
	    	    	</LinearLayout>
	    	    	<!-- 满分 错误 -->
