<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    android:background="@color/theme_color"
	    
	    >
	    <LinearLayout 
	        android:id="@+id/score_panel_back_button"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:orientation="horizontal"
		    android:background="@drawable/button_bg_selector_1"
		    android:onClick="onClick"
		    android:padding="10dp"
	    >
		    <ImageButton 
		        android:layout_width="10dp"
		    	android:layout_height="20dp"
		    	android:layout_marginLeft="10dp"
		    	android:background="@drawable/arrow_left"
		    />
		    <TextView 
		        android:id="@+id/hd_que_name"
		        android:layout_width="wrap_content"
		    	android:layout_height="wrap_content"
		    	android:layout_marginLeft="16dp"
		    	android:layout_marginRight="10dp"
		    	android:text="--/--"
		    	android:textColor="#fff"
		    	android:textSize="16dp"
		    />
	    </LinearLayout>
	    <TextView 
	        android:layout_width="0dp"
	    	android:layout_height="wrap_content"
	    	android:layout_weight="1"
	    	android:text=""
	    	android:textColor="#fff"
	    />
	    <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
		    <RadioButton
		        android:id="@+id/submit_except_button"
		        android:layout_width="wrap_content"
		    	android:layout_height="wrap_content"
		    	android:text="提交仲裁"
		    	android:layout_gravity="right"
		    	android:textColor="#fff"
		    	android:textSize="16dp"
		    	android:padding="10dp"
		    	android:onClick="onClick"
		    	android:button="@null"
		    	android:layout_marginLeft="20dp"
		        />
		    <RadioButton
		        android:id="@+id/ct_record_button"
		        android:layout_width="wrap_content"
		    	android:layout_height="wrap_content"
		    	android:text="阅卷记录"
		    	android:layout_gravity="right"
		    	android:textColor="#fff"
		    	android:textSize="16dp"
		    	android:padding="10dp"
		    	android:onClick="onClick"
		    	android:button="@null"
		    	android:layout_marginLeft="20dp"
		        />
		    <RadioButton
		        android:id="@+id/ct_score_button"
		        android:layout_width="wrap_content"
		    	android:layout_height="wrap_content"
		    	android:text="打分板"
		    	android:layout_gravity="right"
		    	android:textColor="#fff"
		    	android:textSize="16dp"
		    	android:padding="10dp"
		    	android:onClick="onClick"
		    	android:button="@null"
		    	android:layout_marginLeft="20dp"
		        />
		    <RadioButton
		        android:id="@+id/ct_select_button"
		        android:layout_width="wrap_content"
		    	android:layout_height="wrap_content"
		    	android:text="选题"
		    	android:layout_gravity="right"
		    	android:gravity="right"
		    	android:textColor="#fff"
		    	android:textSize="16dp"
		    	android:padding="10dp"
		    	android:button="@null"
		    	android:onClick="onClick"
		    	android:layout_marginLeft="20dp"
		    	android:layout_marginRight="10dp"
	        />
        </RadioGroup>
	    
	</LinearLayout>
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="0dp"
	    android:layout_weight="1"
	    android:orientation="horizontal"
	    android:background="@color/theme_bg_gray_color"
	    
	    >
	    <LinearLayout 
	        
		    android:layout_width="70dp"
		    android:layout_height="match_parent"
		    android:orientation="vertical"
		    android:padding="3dp"
		    >
		    <LinearLayout 
		        android:layout_width="match_parent"
		        android:layout_height="0dp"
		        android:layout_weight="1"
		        android:orientation="vertical"
		        >
		        <!-- 显示大题以及小题总分的打分框 -->
		        <TextView
		            android:id="@+id/total_score_text_view"
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content"
		            android:text="0"
		            android:gravity="center"
		            android:textColor="#fff"
		            android:padding="2dp"
		            android:background="@color/theme_color"
	            />
		        <ListView
			        android:id="@+id/total_score_list_view_1"
			        android:layout_width="match_parent"
			        android:layout_height="match_parent"
			    	android:layout_marginTop="3dp"
			    	
			        android:divider="@android:color/transparent"
			        android:dividerHeight="0dp"
				/>
		    </LinearLayout>
		    <RelativeLayout 
		        android:id="@+id/menu_bar_box"
		        android:layout_width="match_parent"
		        android:layout_height="0dp"
		        android:layout_weight="1"
		        android:orientation="vertical"
		        >
		        <LinearLayout 
		            android:id="@+id/menu_flip_button_box"
		            android:layout_alignParentBottom="true"
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content"
		            android:orientation="vertical"
		        	android:gravity="center"
		            >
			        <ImageView 
			            android:id="@+id/menu_flip_button"
			            android:layout_marginBottom="12dp"
			            android:layout_width="40dp"
			        	android:layout_height="18dp"
			        	android:layout_gravity="center"
			        	android:layout_marginTop="4dp"
			        	android:onClick="onClick"
			        	android:background="@drawable/button_bg_selector_7"
			            />
		        </LinearLayout>
		        <LinearLayout 
		            android:id="@+id/menu_bar"
		            android:layout_above="@id/menu_flip_button_box"
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content"
		            android:orientation="vertical"
		        	android:gravity="center"
		            >
		            <ImageView 
			            android:id="@+id/canvas_pen_button"
			            android:layout_width="25dp"
			        	android:layout_height="25dp"
			        	android:layout_gravity="center"
			        	android:layout_marginTop="3dp"
			        	android:onClick="onClick"
			        	android:background="@drawable/button_bg_selector_2"
			            />
			        <ImageView 
			            android:id="@+id/canvas_delete_button"
			            android:layout_width="25dp"
			        	android:layout_height="25dp"
			        	android:layout_gravity="center"
			        	android:layout_marginTop="3dp"
			        	android:onClick="onClick"
			        	android:background="@drawable/button_bg_selector_3"
			            />
			        <ImageView 
			            android:id="@+id/canvas_dui_button"
			            android:layout_width="25dp"
			        	android:layout_height="25dp"
			        	android:layout_gravity="center"
			        	android:layout_marginTop="3dp"
			        	android:onClick="onClick"
			        	android:background="@drawable/button_bg_selector_4"
			            />
			        <ImageView 
			            android:id="@+id/canvas_bandui_button"
			            android:layout_width="25dp"
			        	android:layout_height="25dp"
			        	android:layout_gravity="center"
			        	android:layout_marginTop="3dp"
			        	android:onClick="onClick"
			        	android:background="@drawable/button_bg_selector_5"
			            />
			        <ImageView 
			            android:id="@+id/canvas_wrong_button"
			            android:layout_width="25dp"
			        	android:layout_height="25dp"
			        	android:layout_gravity="center"
			        	android:layout_marginTop="3dp"
			        	android:onClick="onClick"
			        	android:background="@drawable/button_bg_selector_6"
			            />
		            
		        </LinearLayout>
		        
		        
		    </RelativeLayout>
	    </LinearLayout>
	    
	    <RelativeLayout 
	        android:id="@+id/canvas_area"
		    android:layout_width="0dp"
	    	android:layout_weight="1"
		    android:layout_height="match_parent"
		    android:orientation="vertical"
		    android:background="#eeeeee"
		    android:padding="1dp"
	    >
		    <com.app.utils.MyScrollView
		        android:id="@+id/canvas_scroll_bar"
			    android:layout_width="match_parent"
			    android:layout_height="match_parent"
			    >
			    <RelativeLayout 
				    android:layout_width="match_parent"
				    android:layout_height="wrap_content"
				    android:orientation="vertical"
				    android:gravity="top"
			    >
				    <ImageView 
				        android:id="@+id/iv"
				        android:layout_width="match_parent"
				    	android:layout_height="150dp"
				    	android:gravity="top"
			        />
				    <!-- 透明绘图图层 -->
				    <ImageView 
				        android:id="@+id/iv_face"
				        android:layout_alignTop="@id/iv"
				        android:layout_width="match_parent"
				    	android:layout_height="150dp"
				    	android:gravity="top"
				    	
			        />
			    </RelativeLayout>
		    </com.app.utils.MyScrollView>
		    <Button 
		        android:id="@+id/save_image_button"
		        android:layout_width="50dp"
			    android:layout_height="50dp"
			    android:text="保存"
			    android:textSize="14dp"
			    android:textColor="#fff"
			    android:background="@drawable/buttonsharp_7"
			    android:layout_alignBottom="@id/canvas_scroll_bar"
			    android:layout_marginBottom="80dp"
			    android:layout_marginLeft="25dp"
			    android:gravity="center"
			    android:button="@null"
			    android:onClick="onClick"
			    android:visibility="gone"
		        />
		    <Button 
		        android:id="@+id/submit_sub_total_score_button"
		        android:layout_width="50dp"
			    android:layout_height="50dp"
			    android:text="提交"
			    android:textSize="14dp"
			    android:textColor="#fff"
			    android:background="@drawable/buttonsharp_7"
			    android:layout_alignBottom="@id/canvas_scroll_bar"
			    android:layout_marginBottom="10dp"
			    android:layout_marginLeft="25dp"
			    android:gravity="center"
			    android:button="@null"
			    android:onClick="onClick"
		        />
		    <ImageView 
		        android:id="@+id/loading_image"
		        android:layout_width="60dp"
		        android:layout_height="60dp"
		        android:src="@drawable/loading"
		        android:layout_centerInParent="true"
		        />
	    </RelativeLayout>
	    
