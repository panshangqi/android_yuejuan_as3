<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_margin_60"
    android:paddingRight="@dimen/activity_margin_60"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/login_bg"
    android:orientation="vertical"
    tools:context=".LoginActivity" >
	
    <TextView
        android:id="@+id/logintitle"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:gravity="center_horizontal"
        android:layout_marginBottom="30dp"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:text="@string/login_title" />

	<EditText
        android:id="@+id/login_username"
 		android:background="@drawable/editsharp"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="250dp"
        android:hint="输入手机号"
        android:text=""
        android:paddingLeft="20dp"
        android:textSize="14dp" />
	
	<EditText
        android:id="@+id/login_password"
 		android:layout_below="@id/login_username"
   		android:background="@drawable/editsharp"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:hint="输入密码"
        android:paddingLeft="20dp"
        android:inputType="textPassword"
        android:text=""
        android:layout_marginTop="15dp"
        android:textSize="14dp" />
	<EditText
        android:id="@+id/login_ip"
 		android:layout_below="@id/login_password"
   		android:background="@drawable/editsharp"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:hint="输入学校IP地址和端口"
        android:paddingLeft="20dp"
        android:text=""
        android:layout_marginTop="15dp"
        android:textSize="14dp" />
	<Button
        android:id="@+id/login_button"
        android:layout_below="@id/login_ip"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="22dp"
        android:onClick="onClick"
        android:textColor="#fff"
        android:background="@drawable/buttonsharp"
        android:textSize="16dp"
        android:text="登 录" />
	<LinearLayout 
	    android:layout_below="@id/login_button"
	    android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="right"
        android:layout_gravity="right"
        android:layout_marginTop="15dp"
	    >
	    <Button
        android:id="@+id/loginforget"
        android:layout_width="140dp"
        android:layout_height="30dp"
        android:layout_marginRight="0dp"
        android:gravity="right"
        android:textColor="#666"
        android:textSize="14dp"
        android:onClick="onClick"
        android:button="@null"
        android:background="#00ffffff"
        android:text="忘记密码?" />
	    
	</LinearLayout>
	
</RelativeLayout>