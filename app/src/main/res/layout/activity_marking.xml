<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <include layout="@layout/header_mark_nav_menu_layout" />
    <RadioGroup
        android:id="@+id/radioTabGroup"
        android:orientation="horizontal"
        android:layout_marginTop="6dp"
    	android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        >
 		
        <!--第一个RadioButton-->
        <RadioButton
            android:id="@+id/mk_all_button"
            android:text="全部"
            android:button="@null"
            android:gravity="center"
            android:textColor="@drawable/radio_button_color_selector_2"
            android:drawableBottom="@drawable/radio_button_icon_selector_4"
            android:layout_weight="1"
            android:drawablePadding="5dp"
            android:onClick="onClick"
            android:textSize="14dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <!--第二个RadioButton-->
        <RadioButton
            android:id="@+id/mk_part_button"
            android:text="阅卷中"
            android:button="@null"
            android:textColor="@drawable/radio_button_color_selector_2"
            android:drawableBottom="@drawable/radio_button_icon_selector_5"
            android:gravity="center"
            android:layout_weight="1"
            android:drawablePadding="5dp"
            android:onClick="onClick"
            android:textSize="14dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <!--第三个RadioButton-->
    </RadioGroup>
    <LinearLayout 
        android:id="@+id/viewpager"  
        android:layout_width="match_parent"  
        android:layout_height="0dp"
    	android:layout_weight="1"
        android:layout_gravity="center"
        ></LinearLayout>
