<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0f0f0"
    android:orientation="vertical" >
	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="0dp"
	    android:layout_weight="1"
	    android:orientation="vertical">
	    <TextView 
	        android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:background="#fff"
		    android:text="我的"
		    android:gravity="center"
		    android:padding="14dp"
		    android:textSize="16dp"
		    
	        />
	    <AbsoluteLayout 
	        android:layout_width="match_parent"
		    android:layout_height="150dp"
		    android:background="#fff"
		    android:orientation="vertical">
	        >
	        <ImageView 
	            android:id="@+id/my_bg"
	            android:layout_width="match_parent"
		    	android:layout_height="150dp"
	            android:background="@drawable/personal_head_bg"
	            />
	        <TextView
		        android:id="@+id/my_username"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:layout_centerHorizontal="true"
		        android:layout_y="25dp"
		        android:layout_x="80dp"
		        android:layout_gravity="left"
		        android:gravity="left"
		        android:textColor="#fff"
		        android:textSize="16dp"
		        android:text="D001" />
	        <TextView
		        android:id="@+id/my_user_id"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:layout_centerHorizontal="true"
		        android:layout_y="55dp"
		        android:layout_x="80dp"
		        android:layout_gravity="left"
		        android:gravity="left"
		        android:textColor="#fff"
		        android:textSize="12dp"
		        android:text="账号：xxx" />
	        <TextView
		        android:id="@+id/my_authority"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:layout_centerHorizontal="true"
		        android:layout_y="80dp"
		        android:layout_x="80dp"
		        android:layout_gravity="left"
		        android:gravity="left"
		        android:textColor="#fff"
		        android:textSize="12dp"
		        android:text="权限：xxx" />
        </AbsoluteLayout>
	    
	    <LinearLayout 
	        android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:gravity="center"
		    android:background="#fff"
		    android:orientation="vertical">
	        >
		    <LinearLayout 
		        android:layout_width="match_parent"
			    android:layout_height="120dp"
			    android:gravity="center"
			    android:background="@drawable/line_bottom_sharp"
			    android:orientation="horizontal">
		        >
		        <LinearLayout
		            android:id="@+id/my_change_password_button"
			        android:layout_width="0dp"
			        android:layout_weight="1"
			        android:gravity="center"
			        android:orientation="vertical"
			        android:onClick="onClick"
			        android:layout_height="120dp">
			        <ImageView 
			            android:id="@+id/my_change_password_icon"
					     android:layout_width="35dp"
					     android:layout_height="35dp"
					     android:layout_centerHorizontal="true"
					     android:gravity="center"
					     android:background="@drawable/my_change_password"
			            />
			        <TextView
				        
				        android:layout_below="@id/my_change_password_icon"
				        android:layout_width="fill_parent"
				        android:layout_height="wrap_content"
				        android:layout_centerHorizontal="true"
				        android:layout_marginTop="10dp"
				        android:layout_gravity="center"
				        android:gravity="center"
				        android:textColor="#888"
				        android:textSize="12dp"
				        android:text="修改密码" />
		        </LinearLayout>
		        <LinearLayout
		            android:id="@+id/my_request_button"
			        android:layout_width="0dp"
			        android:layout_weight="1"
			        android:gravity="center"
			        android:onClick="onClick"
			        android:orientation="vertical"
			        android:background="@drawable/line_left_sharp"
			        android:layout_height="120dp">
	
			        <ImageView 
			            android:id="@+id/my_request_icon"
					     android:layout_width="35dp"
					     android:layout_height="35dp"
					     android:layout_centerHorizontal="true"
					     android:layout_gravity="center"
					     android:background="@drawable/my_householder_invite"
			            />
			        <TextView
				        
				        android:layout_below="@id/my_request_icon"
				        android:layout_width="fill_parent"
				        android:layout_height="wrap_content"
				        android:layout_centerHorizontal="true"
				        android:layout_marginTop="10dp"
				        android:layout_gravity="center"
				        android:gravity="center"
				        android:textColor="#888"
				        android:textSize="12dp"
				        android:text="家长邀请" />
		        </LinearLayout>
		        <LinearLayout
		            android:id="@+id/my_regiter_parent_button"
			        android:layout_width="0dp"
			        android:layout_weight="1"
			        android:gravity="center"
			        android:orientation="vertical"
			        android:layout_gravity="center"
			        android:onClick="onClick"
			        android:background="@drawable/line_left_sharp"
			        android:layout_height="120dp">
	
			        <ImageView 
			            android:id="@+id/regiter_icon"
					     android:layout_below="@id/logintitle"
					     android:layout_width="35dp"
					     android:layout_height="35dp"
					     android:layout_centerHorizontal="true"
					     android:layout_gravity="center"
					     android:background="@drawable/my_register_householder"
			            />
			        <TextView
				        
				        android:layout_below="@id/regiter_icon"
				        android:layout_width="fill_parent"
				        android:layout_height="wrap_content"
				        android:layout_centerHorizontal="true"
				        android:layout_marginTop="10dp"
				        android:gravity="center"
				        android:textColor="#888"
				        android:textSize="12dp"
				        android:text="注册家长" />
	        	</LinearLayout>
	    	</LinearLayout>
		    
		    <LinearLayout
		        
		        android:layout_width="match_parent"
			    android:layout_height="120dp"
			    android:gravity="center"
			    
			    android:background="@drawable/line_bottom_sharp"
			    android:orientation="horizontal">
		        >
		        <LinearLayout
		            android:id="@+id/my_help_center_button"
			        android:layout_width="0dp"
			        android:layout_weight="1"
			        android:gravity="center"
			        android:orientation="vertical"
			        android:onClick="onClick"
			        android:background="@drawable/line_left_sharp"
			        android:layout_height="120dp">
			        <ImageView 
			            android:id="@+id/my_problem_icon"
					     android:layout_width="35dp"
					     android:layout_height="35dp"
					     android:layout_centerHorizontal="true"
					     android:gravity="center"
					     android:background="@drawable/my_fre_question"
			            />
			        <TextView
				        
				        android:layout_below="@id/my_problem_icon"
				        android:layout_width="fill_parent"
				        android:layout_height="wrap_content"
				        android:layout_centerHorizontal="true"
				        android:layout_marginTop="10dp"
				        android:layout_gravity="center"
				        android:gravity="center"
				        android:textColor="#888"
				        android:textSize="12dp"
				        android:text="常见问题" />
		        </LinearLayout>
		        <LinearLayout
		            android:id="@+id/my_service_phone_button"
			        android:layout_width="0dp"
			        android:layout_weight="1"
			        android:gravity="center"
			        android:orientation="vertical"
			        android:onClick="onClick"
			        android:background="@drawable/line_left_sharp"
			        android:layout_height="120dp">
	
			        <ImageView 
			            android:id="@+id/my_phone_icon"
					     android:layout_width="35dp"
					     android:layout_height="35dp"
					     android:layout_centerHorizontal="true"
					     android:layout_gravity="center"
					     android:background="@drawable/my_custom_service_phone"
			            />
			        <TextView
				        
				        android:layout_below="@id/my_phone_icon"
				        android:layout_width="fill_parent"
				        android:layout_height="wrap_content"
				        android:layout_centerHorizontal="true"
				        android:layout_marginTop="10dp"
				        android:layout_gravity="center"
				        android:gravity="center"
				        android:textColor="#888"
				        android:textSize="12dp"
				        android:text="客服电话" />
		        </LinearLayout>  
		    </LinearLayout>
		    <LinearLayout
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    android:gravity="center_horizontal"
		    android:orientation="horizontal"
		    android:layout_marginTop="22dp"
		    android:layout_marginBottom="22dp"
		    android:weightSum="5" >
		    <Button
		        android:id="@+id/logout_button"
		        android:layout_below="@id/login_password"
		        android:layout_height="45dp"
		        android:layout_width="0dp"
		        android:layout_weight="4"
		        android:onClick="onClick"
		        android:textColor="#fff"
		        android:background="@drawable/buttonsharp"
		        android:text="退出登录" />
	    </LinearLayout>
	    </LinearLayout>
	    
	</LinearLayout>

    <include layout="@layout/buttom_nav_menu_layout" />
</LinearLayout>